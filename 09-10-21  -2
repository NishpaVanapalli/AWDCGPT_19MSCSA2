import java.util.*;
class pow_rec
{
	static int pow(int n, int p)
	{
		if(n==1 || p==0)
		return 1;
		else if(p==1)
		return n;
		else
		return(n*pow(n,p-1));
	}
	public static void main(String args[])
	{
		Scanner sc=new Scanner(System.in);
		System.out.print("Enter a number : ");
		int n=sc.nextInt();
		System.out.print("Enter power : ");
		int p=sc.nextInt();
		System.out.print(n+" ^ "+p+" = "+pow(n,p));
	}
}



o/p 1 :
Enter a number : 2
Enter power : 3
2 ^ 3 = 8

o/p 2 :
Enter a number : 5
Enter power : 3
5 ^ 3 = 125
