import java.util.*;
class patt_odd
{
	public static void main(String ar[])
	{
		Scanner sc=new Scanner(System.in);
		System.out.println("Enter n value");
		int n=sc.nextInt();
		int start=1, inc=1, size=0, i=0, j=1;
		for(int k=1;k<=2;k++)
		{	
			for(i=start;i>=1&&i<=n;i+=inc)
			{
				size=i*2-1;
				for(j=start;j>=1&&j<=size;j++)
				{
					System.out.print("* ");
					
				}
			size=1;
			System.out.println();
			if(k==2)
				start=start-1;	
			}
			
			start=n-1;
			inc=-1;
				
		}
	}
}

o/p:
Enter n value
4
*
