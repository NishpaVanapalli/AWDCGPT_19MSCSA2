import java.util.*;
class harshad_number
{
public static void main(String ar[])
{
Scanner sc=new Scanner(System.in);
System.out.println("Enter a number");
int n=sc.nextInt();
int s=n;
int rem, sum=0;
while(n>0)
{
rem=n%10;
sum+=rem;
n/=10;
}
if(s%sum==0)
System.out.println("Harshad Number");
else
System.out.println("not harshad number");
}
}

o/p 1:
Enter a number
156
Harshad Number

o/p 2:
Enter a number
22
not harshad number
