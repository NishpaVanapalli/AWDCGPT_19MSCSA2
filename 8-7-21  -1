import java.util.*;
class diagonal_not
{
public static void main(String args[])
{
Scanner sc=new Scanner(System.in);
System.out.println("enter no of elements");
int n=sc.nextInt();
int value=sc.nextInt();
int i,j;
System.out.println("choose any one:\n 1.1D array\n2.2D array");
int a[]=new int[n];
int b[][]=new int[n][n];
switch (value)
{
case 1:System.out.println("enter 1D array elements");
       for(i=0;i<n;i++)
       {
       a[i]=sc.nextInt();
       }
       System.out.println("your array is not diagonal");
       break;
case 2:System.out.println("enter 2D array elements");
       for(i=0;i<n;i++)
       {
       for(j=0;j<n;j++)
       {
       b[i][j]=sc.nextInt();
       }
       }
        System.out.println("your array is diagonal");
        break;
default:System.out.println("your choice is invalid");
        break;
        }
        }
}



